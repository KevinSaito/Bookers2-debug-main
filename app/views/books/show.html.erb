<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @findbook.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to (@findbook.user) do %>
            <%= image_tag @findbook.user.get_profile_image, size:"100x100" %><br>
            <%= @findbook.user.name %>
            <% end %>
          </td>
          <td><%= link_to @findbook.title, @findbook %></td>
          <td><%= @findbook.body %></td>
          <% if @findbook.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@findbook), class: "btn btn-sm btn-success edit_book_#{@findbook.id}" %></td>
            <td><%= link_to 'Destroy',@findbook, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@findbook.id}"%></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>